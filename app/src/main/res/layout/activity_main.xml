<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/app_name">
a
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算器"
        android:id="@+id/hellobutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎界面"
        android:id="@+id/button_mult"
        android:layout_below="@+id/hellobutton"
        android:layout_marginTop="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/hellobutton"
        android:layout_alignEnd="@+id/hellobutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一起祷告吧"
        android:id="@+id/tab_bt"
        android:layout_below="@+id/button_mult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/button_mult"
        android:layout_alignEnd="@+id/button_mult" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接打印机"
        android:id="@+id/bt_painter"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/tab_bt"
        android:layout_alignRight="@+id/tab_bt"
        android:layout_alignEnd="@+id/tab_bt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打印测试"
        android:id="@+id/test_pain_bt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
